{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "es2017",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "typeRoots": ["../node_modules/@types", "../node_modules/jest"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["../node_modules", "../cypress"]
}